<odoo>
    <data>

<!-- Création d'un nouvel utilisateir -->
    <template id='user_create' name='Création d"utilisateurs'>
        <t t-call="website.layout">
            <div id="wrap">
                <div class="oe_structure">
                    <div class="container">
                    <form role="form" action="/create_sccuess" method="post">
                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()" />
                        <div class="form-group">
                            <label for="user_name" class="control-label">Nom</label>
                            <input type="text" name="user_name" t-att-value="user_name" id="user_name" class="form-control"
                             placeholder="Nom et Prenom" required="required"></input>
                        </div>
                        <div class="form-group">
                            <label for="user_email" class="control-label">E-Mail</label>
                            <input type="email" name="user_email" t-att-value="user_email" id="user_email" class="form-control"
                             placeholder="email@address.com" required="required"></input>
                        </div>
                        <div class="clearfix oe_login_buttons">
                            <button type="submit" class="btn btn-success">Créer utilisateur</button>                           
                        </div>
                    </form>
                    </div>
                </div>
            </div>
        </t>
    </template>
        
    </data>

</odoo>