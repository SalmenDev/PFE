<?xml version="1.0" encoding="utf-8"?>
<odoo>
     <!-- template télécharger contrat  -->
    <template id="telecharger" name="télécharger contrat">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="oe_structure">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="card">
                                    <div class="card-header">
                                        <h3 class="card-title">Télécharger Contrat</h3>
                                    </div>
                                    <div class="card-body">
                                        <div class="col-md-12">
                                            <form role="form" method="POST">
                                                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()" />
                                                <div class="col-md-4">
                                                    <div class="form-group">
                                                        <label for="doc" class="form-label">Contrat TOPNET</label>
                                                        <a href="Contrat_HautDebit-TOPNET.PDF" download="download">Télécharger</a>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>